{
    "name": "mohu",
    "productName": "Mohu APP",
    "version": "1.0.1",
    "description": "膜乎APP",
    "main": "./main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/Xmader/mohu"
    },
    "author": "xmader",
    "build": {
        "appId": "com.mohu.app",
        "productName": "MohuAPP",
        "directories": {
            "output": "../../OutApp"
        },
        "electronDownload": {
            "cache": "../../OutApp/Temp",
            "mirror": "https://npm.taobao.org/mirrors/electron/"
        },
        "electronVersion": "2.0.4",
        "mac": {
            "target": [
                "zip"
            ]
        },
        "win": {
            "target": "zip",
            "extraFiles": [
                "../../README.md",
                "../../README_zh.md"
            ]
        }
    },
    "scripts": {
        "start": "electron .",
        "packager-win64": "git-bash ./packager.sh win32 x64",
        "packager-win32": "git-bash ./packager.sh win32 ia32",
        "packager-linux64": "git-bash ./packager.sh linux x64",
        "packager-linux32": "git-bash ./packager.sh linux ia32",
        "packager-darwin64": "git-bash ./packager.sh darwin x64",
        "packager-all": "npm run-script packager-win64 && npm run-script packager-win32 && npm run-script packager-linux64 && npm run-script packager-darwin64"
    },
    "license": "MIT"
}
