{
    "name": "mohu",
    "productName": "Mohu APP",
    "version": "1.0.1",
    "description": "膜乎APP",
    "main": "./main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/Xmader/mohu"
    },
    "author": "xmader",
    "build": {
        "appId": "com.mohu.app",
        "productName": "MohuAPP",
        "directories": {
            "output": "../../OutApp"
        },
        "electronDownload": {
            "cache": "../../OutApp/Temp",
            "mirror": "https://npm.taobao.org/mirrors/electron/"
        },
        "electronVersion": "2.0.4",
        "mac": {
            "target": [
                "zip"
            ]
        },
        "win": {
            "target": "zip",
            "extraFiles": [
                "../../README.md",
                "../../README_zh.md"
            ]
        }
    },
    "scripts": {
        "start": "electron .",
        "packager":"if [ $(uname -o) = \"Msys\" ];then git-bash ./packager.sh $p $a;else ./packager.sh $p $a;fi",
        "packager-win64": "./packager.sh win32 x64",
        "packager-win32": "./packager.sh win32 ia32",
        "packager-linux64": "./packager.sh linux x64",
        "packager-linux32": "export p=linux;export a=ia32;npm run packager",
        "packager-darwin64": "./packager.sh darwin x64",
        "packager-all": "npm run packager-win64 && npm run packager-win32 && npm run packager-linux64 && npm run packager-darwin64"
    },
    "license": "MIT"
}
